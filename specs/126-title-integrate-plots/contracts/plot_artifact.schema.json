{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PlotArtifact",
    "type": "object",
    "required": [
        "kind",
        "path_pdf",
        "status"
    ],
    "properties": {
        "kind": {
            "type": "string",
            "enum": [
                "distribution",
                "trajectory",
                "kde",
                "pareto",
                "force_heatmap"
            ]
        },
        "path_pdf": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "generated",
                "skipped",
                "error"
            ]
        },
        "note": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "additionalProperties": false
}