{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/robot-sf/scenario-matrix.schema.v1.json",
    "title": "RobotSF Scenario Matrix (v1)",
    "type": "object",
    "required": [
        "scenarios"
    ],
    "additionalProperties": false,
    "properties": {
        "version": {
            "const": "v1"
        },
        "scenarios": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "algo",
                    "map",
                    "episodes",
                    "seed"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "algo": {
                        "type": "string"
                    },
                    "map": {
                        "type": "string"
                    },
                    "episodes": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "seed": {
                        "type": "integer"
                    },
                    "notes": {
                        "type": "string"
                    }
                }
            }
        }
    }
}