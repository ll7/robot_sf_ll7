{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PerformanceVisualsManifest",
    "type": "object",
    "properties": {
        "plots_time_s": {
            "type": "number",
            "minimum": 0
        },
        "first_video_time_s": {
            "type": [
                "number",
                "null"
            ],
            "minimum": 0
        },
        "first_video_render_time_s": {
            "description": "Time spent rendering (frame generation) for the first successful SimulationView video (excludes encoding), null if no video rendered",
            "type": [
                "number",
                "null"
            ],
            "minimum": 0
        },
        "first_video_encode_time_s": {
            "description": "Encoding time for first successful video (mirrors legacy key kept for compatibility)",
            "type": [
                "number",
                "null"
            ],
            "minimum": 0
        },
        "plots_over_budget": {
            "type": "boolean"
        },
        "video_over_budget": {
            "type": "boolean"
        },
        "memory_over_budget": {
            "type": [
                "boolean",
                "null"
            ]
        },
        "video_success_count": {
            "type": "integer",
            "minimum": 0
        },
        "video_status_note": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "plots_time_s",
        "plots_over_budget",
        "video_over_budget"
    ],
    "additionalProperties": false
}
