{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/robot-sf/episode.schema.v1.json",
    "title": "RobotSF Benchmark Episode (v1)",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "version",
        "episode_id",
        "scenario_id",
        "seed",
        "metrics"
    ],
    "properties": {
        "version": {
            "const": "v1"
        },
        "episode_id": {
            "type": "string",
            "minLength": 1
        },
        "scenario_id": {
            "type": "string",
            "minLength": 1
        },
        "scenario_params": {
            "type": "object"
        },
        "seed": {
            "type": "integer"
        },
        "horizon": {
            "type": "integer",
            "minimum": 1
        },
        "algo": {
            "type": "string"
        },
        "algorithm_metadata": {
            "type": "object",
            "description": "Metadata about the algorithm/policy used (name, config, status).",
            "properties": {
                "algorithm": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "ok",
                        "fallback",
                        "error",
                        "placeholder"
                    ]
                },
                "fallback_reason": {
                    "type": "string"
                },
                "config": {
                    "type": "object"
                },
                "config_hash": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "metric_parameters": {
            "type": "object",
            "description": "Metric threshold profile and signature used for report reproducibility.",
            "properties": {
                "threshold_signature": {
                    "type": "string"
                },
                "threshold_profile": {
                    "type": "object",
                    "properties": {
                        "profile_id": {
                            "type": "string"
                        },
                        "collision_distance_m": {
                            "type": "number"
                        },
                        "near_miss_distance_m": {
                            "type": "number"
                        },
                        "comfort_force_threshold": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "profile_id",
                        "collision_distance_m",
                        "near_miss_distance_m",
                        "comfort_force_threshold"
                    ],
                    "additionalProperties": true
                }
            },
            "required": [
                "threshold_signature",
                "threshold_profile"
            ],
            "additionalProperties": true
        },
        "metrics": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
                "type": [
                    "number",
                    "integer",
                    "boolean",
                    "object"
                ]
            }
        },
        "config_hash": {
            "type": "string"
        },
        "git_hash": {
            "type": "string"
        },
        "timestamps": {
            "type": "object",
            "required": [
                "start",
                "end"
            ],
            "properties": {
                "start": {
                    "type": "string",
                    "format": "date-time"
                },
                "end": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "additionalProperties": true
        },
        "timing": {
            "type": "object",
            "required": [
                "steps_per_second"
            ],
            "properties": {
                "steps_per_second": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        },
        "notes": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "identity": {
            "type": "object",
            "additionalProperties": true
        },
        "video": {
            "type": "object",
            "description": "Optional per-episode video artifact metadata.",
            "properties": {
                "path": {
                    "type": "string"
                },
                "format": {
                    "type": "string",
                    "enum": [
                        "mp4"
                    ]
                },
                "filesize_bytes": {
                    "type": "integer",
                    "minimum": 1
                },
                "frames": {
                    "type": "integer",
                    "minimum": 0
                },
                "renderer": {
                    "type": "string",
                    "enum": [
                        "synthetic",
                        "sim-view",
                        "none"
                    ]
                },
                "notes": {
                    "type": "string"
                },
                "encode_seconds": {
                    "type": "number",
                    "minimum": 0
                },
                "overhead_ratio": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "path",
                "format",
                "filesize_bytes",
                "frames",
                "renderer"
            ],
            "additionalProperties": true
        }
    }
}
