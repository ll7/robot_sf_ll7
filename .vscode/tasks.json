{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Ruff: Format and Fix",
			"type": "shell",
			"command": "uv run ruff check --fix . --output-format concise; uv run ruff format .; uv run ruff check . --statistics",
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "uv run pytest tests",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests in parallel",
			"type": "shell",
			"command": "uv run pytest -n auto",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests (fast)",
			"type": "shell",
			"command": "uv run pytest -m \"not slow\" tests",
			"group": "test"
		},
		{
			"label": "PR Ready Check",
			"type": "shell",
			"command": "uv run ruff check --fix . --output-format concise && uv run ruff format . && uv run ruff check . --statistics && uv run pytest -n auto && uv run python scripts/coverage/check_changed_files_coverage.py --base origin/main --min 80 --goal 100 && uv run python scripts/validation/check_docstring_todos.py --base origin/main",
			"group": "test"
		},
		{
			"label": "Docstring TODO Check (diff)",
			"type": "shell",
			"command": "uv run python scripts/validation/check_docstring_todos.py --base origin/main",
			"group": "test"
		},
		{
			"label": "Run Tests (GUI)",
			"type": "shell",
			"command": "SDL_VIDEODRIVER= uv run pytest test_pygame",
			"group": "test"
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "uv sync  --all-extras",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Generate UML",
			"type": "shell",
			"command": "./class_diagram/generate_uml.sh",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests (Show All Warnings)",
			"type": "shell",
			"command": "uv run pytest tests --disable-warnings --tb=short -v",
			"group": "test"
		},
		{
			"label": "Check Code Quality",
			"type": "shell",
			"command": "uv run ruff check . && uv run ty check . --exit-zero",
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "uvx ty check . --exit-zero",
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "uv run pytest -n auto tests",
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Open Coverage Report",
			"type": "shell",
			"command": "uv run python scripts/coverage/open_coverage_report.py",
			"problemMatcher": [],
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Map Verification (CI Mode)",
			"type": "shell",
			"command": "uv run python scripts/validation/verify_maps.py --scope ci --mode ci --output output/validation/map_verification.json",
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
	]
}
