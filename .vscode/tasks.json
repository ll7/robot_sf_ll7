{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Ruff: Format and Fix",
			"type": "shell",
			"command": "uv run ruff check --fix . && uv run ruff format . && uv run ruff check .",
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "uv run pytest tests",
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests (GUI)",
			"type": "shell",
			"command": "uv run pytest test_pygame",
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "uv sync  --all-extras",
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Generate UML",
			"type": "shell",
			"command": "./class_diagram/generate_uml.sh",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests (Show All Warnings)",
			"type": "shell",
			"command": "uv run pytest tests --disable-warnings --tb=short -v",
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Check Code Quality",
			"type": "shell",
			"command": "uv run ruff check . && uv run pylint robot_sf --errors-only",
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "uvx ty check . --exit-zero",
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "uv run pytest tests",
			"problemMatcher": [],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Open Coverage Report",
			"type": "shell",
			"command": "uv run python scripts/coverage/open_coverage_report.py",
			"problemMatcher": [],
			"group": "none",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}